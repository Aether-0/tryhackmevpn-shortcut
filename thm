#!/bin/bash

start_vpn() {
    # Start OpenVPN in the background and store its PID
    sudo nohup openvpn /opt/thmvpn.ovpn > /dev/null 2>&1 &
    echo "OpenVPN started."
}

stop_vpn() {
    # Stop OpenVPN
    sudo pkill openvpn
    echo "OpenVPN stopped."
}

