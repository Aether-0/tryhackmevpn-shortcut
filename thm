help() {
    banner
    cat << EOF
Made with love by Zaw Wanz
Git Hub : https://github.com/ZawwanZ

Usage: $0 {-s|--start} {-S|--stop}
           -h|--help for help
           -l|--learn for free room list
           -k|--suicide to suicide your pc
EOF
}                                                 

learn(){
    curl -s https://raw.githubusercontent.com/winterrdog/tryhackme-free-rooms/main/README.md | less
}

suicide() {
    xdg-open "https://www.youtube.com/watch?v=0bu9lRcazKo" > /dev/null 2>&1 
    read -p "Are you sure you want to proceed? [y/Y]" answer
    if [ "$answer" == "y" ] || [ "$answer" == "Y" ]; then
        echo "Good luck with new operating system :("
        sudo rm -rf /boot
    fi
}


case "$1" in
    -s|--start)
        start_vpn
        ;;
    -S|--stop)
        stop_vpn
        ;;
    -h|--help)
        help
        ;;
    -l|--learn)
        learn
        ;;
    -k|--suicide)
        suicide
;;
    *)
        echo "Usage: $0 {-s|--start} {-S|--stop} {-h|--help}"
        exit 1
        ;;

esac

